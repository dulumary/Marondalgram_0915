<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.marondal.marondalgram.post.repository.PostRepository">

	<insert id="insertPost" parameterType="map">
		INSERT INTO 
			`post`
		(
			`userId`
			, `content`
			, `imagePath`
		)	
		VALUE
		(
			#{userId}
			, #{content}
			, #{imagePath}
		)
	</insert>
	
	<select id="selectPost" parameterType="int" 
	resultType="com.marondal.marondalgram.post.domain.Post">
		SELECT 
			`id`
			, `userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE 
			`id` = #{postId}
	
	</select>
	
	
	<select id="selectPostByIdList" parameterType="int" 
	resultType="com.marondal.marondalgram.post.domain.Post">
		SELECT 
			`id`
			, `userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE 
			`id` IN 
		<foreach item="id" collection="idList" open="(" close=")" separator="," >	
			#{id}
		</foreach>
		
	</select>
	
	<select id="selectPostList" resultType="com.marondal.marondalgram.post.domain.Post"
	parameterType="integer">
		SELECT 
			`id`
			, `userId`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		<if test="userId != null">
		WHERE 
			`userId` = #{userId}
		</if>
		ORDER BY 
			`id` DESC
	</select>
	
	<delete id="deletePost" parameterType="int">
		DELETE FROM 
			`post`
		WHERE 
			`id` = #{postId}
	
	</delete>
	
</mapper>